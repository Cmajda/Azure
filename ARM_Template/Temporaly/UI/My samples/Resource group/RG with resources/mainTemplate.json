            "defaultValue": "northeurope"
        },
        "Tagdescription": {
            "type": "string"
        },
        "TagStage": {
            "type": "string",
            "allowedValues": [ "Live", "Test", "Dev", "Sandbox" ]
        },
        "TagCustomer": {
            "type": "string",
            "minLength": 3,
            "maxLength": 512
        },
        "TagAdministrator": {
            "type": "string",
            "minLength": 3,
            "maxLength": 512
        },
        "TagDeployment": {
            "type": "string"
        },
        "StorageKind": {
            "type": "string",
            "allowedValues": [ "StorageV2" ]
        },
        "StorageSku": {
            "type": "string",
            "allowedValues": [ "Standard_LRS" ]
        },
        "YesNoNewStorageAccount": {
            "type": "string"
        },
        "YesNoNewKeyVault": {
            "type": "string"
        }




    },
    "variables": {
        "rgName": "[concat('rg-',parameters('CountrySITSIO').value, '-', parameters('ApplicationName'),'-',parameters('IndexSuffix'))]",
        "storageName": "[concat('st',parameters('CountrySITSIO').value, parameters('ApplicationName'),parameters('IndexSuffix'),'logs')]",
        "keyValueName": "[concat('kv-',parameters('CountrySITSIO').value, '-', parameters('ApplicationName'),'-',parameters('IndexSuffix'))]",
        "id": "[subscription().id]",
        "subscriptionId": "[subscription().subscriptionId]",
        "tenantId": "[subscription().tenantId]",
        "displayName": "[subscription().displayName]",

        "FullTag": {
            "Application": "[parameters('ApplicationName')]",
            "Country": "[parameters('CountrySITSIO')]",
            "description": "[parameters('Tagdescription')]",
            "Stage": "[parameters('TagStage')]",
            "customer": "[parameters('TagCustomer')]",
            "Administrator": "[parameters('TagAdministrator')]",
            "Deployment": "[parameters('TagDeployment')]"

        },
        "OutputString": {
            "type": "object",
            "value": "[parameters('CountrySITSIO').value]"
        }

    },

    "resources": [


        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-08-01",
            "location": "[parameters('location')]",
            "name": "[variables('rgName')]",
            "properties": {},
            "tags": "[variables('FullTag')]"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "storageDeployment",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "condition": "[equals(parameters('YesNoNewStorageAccount'),'Yes')]",
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2017-10-01",
                            "name": "[variables('storageName')]",
                            "location": "[parameters('location')]",
                            "kind": "[parameters('StorageKind')]",
                            "sku": {
                                "name": "[parameters('StorageSku')]"
                            },
                            "tags": "[variables('FullTag')]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "KeyVaultDeployment",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "condition": "[equals(parameters('YesNoNewKeyVault'),'Yes')]",
                            "type": "Microsoft.KeyVault/vaults",
                            "name": "[variables('keyValueName')]",
                            "location": "[parameters('location')]",
                            "apiVersion": "2019-09-01",
                            "tags": "[variables('FullTag')]",
                            "properties": {
                                "enabledForDeployment": true,
                                "enabledForTemplateDeployment": true,
                                "enabledForDiskEncryption": true,
                                "enableSoftDelete": false,
                                "tenantId": "[subscription().tenantId]",
                                "accessPolicies": [],
                                "sku": {
                                    "name": "Standard",
                                    "family": "A"
                                },
                                "networkAcls": {
                                    "defaultAction": "Allow",
                                    "bypass": "AzureServices"
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "condition": "[equals(parameters('TagStage'),'Live')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "ApplyLockRgDeployment",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[variables('rgName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Authorization/locks",
                            "apiVersion": "2017-04-01",
                            "name": "DontDelete",
                            "properties": {
                                "level": "CanNotDelete",
                                "notes": "Prevent deletion of the resourceGroup"
                            }
                        }
                    ]
                }
            }
        }

    ],
    "outputs": {
        "OutputString": {
            "type": "string",
            "value": "[variables('OutputString').value]"
        },
        "Location": {
            "type": "string",
            "value": "[parameters('location')]"
        },
        "YesNoNewStorageAccount": {
            "type": "string",
            "value": "[parameters('YesNoNewStorageAccount')]"
        },
        "id": {
            "type": "string",
            "value": "[variables('id')]"
        },
        "subscriptionId": {
            "type": "string",
            "value": "[variables('subscriptionId')]"
        },
        "tenantId": {
            "type": "string",
            "value": "[variables('tenantId')]"
        },
        "displayName": {
            "type": "string",
            "value": "[variables('displayName')]"
        }

    }
